.container {
  min-height: 100vh;
  padding: 40rpx;
  background-size: cover;
  background-position: center;
  display: flex;
  flex-direction: column;
  position: relative;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 1;
}

.keywords-card, .result-section {
  position: relative;
  z-index: 2;
}

.keywords-card {
  background: rgba(255, 255, 255, 0.9);
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
}

.label {
  font-size: 28rpx;
  color: #666;
  display: block;
  margin-bottom: 16rpx;
}

.keywords {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.result-section {
  background: rgba(255, 255, 255, 0.9);
  padding: 40rpx;
  border-radius: 16rpx;
  min-height: 400rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
}

.loading {
  text-align: center;
  padding: 60rpx 0;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.loading text {
  font-size: 32rpx;
  color: white;
}

.error {
  text-align: center;
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.error text {
  font-size: 32rpx;
  color: white;
  margin: 20rpx 0;
}

.retry-btn {
  background: white;
  color: #D4001A;
  font-size: 32rpx;
  padding: 20rpx 60rpx;
  border-radius: 12rpx;
}

.wish-card {
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(10px);
  padding: 40rpx;
  border-radius: 16rpx;
  margin-bottom: 60rpx;
}

.wish-text {
  font-size: 36rpx;
  line-height: 1.6;
  white-space: pre-wrap;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
}

.secondary-btn, .primary-btn {
  flex: 1;
  font-size: 32rpx;
  padding: 24rpx 0;
  border-radius: 12rpx;
}

.secondary-btn {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  backdrop-filter: blur(10px);
}

.primary-btn {
  background: #D4001A;
  color: white;
}
