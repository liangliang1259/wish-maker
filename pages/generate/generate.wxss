.container {
  min-height: 100vh;
  padding: 40rpx;
  background-size: cover;
  background-position: center;
  display: flex;
  flex-direction: column;
  position: relative;
}

.container::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  z-index: 1;
}

.keywords-card, .result-section {
  position: relative;
  z-index: 2;
}

.keywords-card {
  background: rgba(255, 255, 255, 0.9);
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.keywords {
  font-size: 36rpx;
  color: #333;
  font-weight: bold;
  font-family: "HYZhuZiMuTouRenW", "YouYuan", "Microsoft YaHei", sans-serif;
}

.result-section {
  background: rgba(255, 255, 255, 0.9);
  padding: 40rpx;
  border-radius: 16rpx;
  min-height: 400rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
}

.loading {
  text-align: center;
  padding: 60rpx 0;
}

.loading text {
  font-size: 32rpx;
  color: #fff;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.5);
  font-family: "HYZhuZiMuTouRenW", "YouYuan", "Microsoft YaHei", sans-serif;
}

.error {
  text-align: center;
  padding: 60rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.error text {
  color: #ff4d4f;
  font-size: 28rpx;
  margin: 20rpx 0;
}

.retry-btn {
  margin-top: 20rpx;
  background: #ff4d4f;
  color: #fff;
  padding: 16rpx 40rpx;
  border-radius: 12rpx;
}

.wish-card {
  background: rgba(255, 255, 255, 0.95);
  padding: 40rpx;
  border-radius: 16rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.wish-text {
  font-size: 36rpx;
  line-height: 1.8;
  white-space: pre-wrap;
  text-align: center;
  font-family: "HYZhuZiMuTouRenW", "YouYuan", "Microsoft YaHei", sans-serif;
  background: linear-gradient(45deg, #333 0%, #666 50%, #333 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: none !important;
  animation: textShine 2s linear infinite;
}

@keyframes textShine {
  0% {
    background-position: 0% center;
  }
  100% {
    background-position: 200% center;
  }
}

.action-buttons {
  display: flex;
  gap: 20rpx;
  margin-top: 40rpx;
  justify-content: center;
}

.secondary-btn, .primary-btn {
  flex: 1;
  font-size: 32rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  color: #fff;
  font-family: "HYZhuZiMuTouRenW", "YouYuan", "Microsoft YaHei", sans-serif;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.secondary-btn {
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
}

.primary-btn {
  background: linear-gradient(135deg, #1890ff 0%, #69c0ff 100%);
}
