.container {
  padding: 40rpx;
  min-height: 100vh;
  background: #FFF7F7;
}

.keywords-card {
  background: white;
  padding: 30rpx;
  border-radius: 16rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
}

.label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 12rpx;
  display: block;
}

.keywords {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.result-section {
  background: white;
  padding: 40rpx;
  border-radius: 16rpx;
  min-height: 400rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.loading-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 20rpx;
}

.loading text {
  font-size: 28rpx;
  color: #666;
}

.error {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 400rpx;
}

.error text {
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0;
}

.retry-btn {
  background: #D4001A;
  color: white;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 8rpx;
}

.wish-card {
  padding: 40rpx;
  background: #FFFAF0;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
}

.wish-text {
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  margin-top: 40rpx;
}

.action-buttons button {
  flex: 1;
  margin: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  padding: 20rpx 0;
}

.action-buttons button image {
  width: 32rpx;
  height: 32rpx;
  margin-right: 8rpx;
}

.secondary-btn {
  background: #F8F8F8;
  color: #666;
}

.primary-btn {
  background: #D4001A;
  color: white;
}
