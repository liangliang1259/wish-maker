.container {
  padding: 40rpx;
  min-height: 100vh;
  background: #FFF7F7;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 60rpx;
}

.title {
  font-size: 36rpx;
  color: #D4001A;
  font-weight: bold;
}

.input-section {
  margin-bottom: 40rpx;
}

.keyword-input {
  background: white;
  padding: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
  font-size: 28rpx;
}

.section-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.background-list {
  white-space: nowrap;
  margin: 0 -40rpx;
  padding: 20rpx 40rpx;
}

.background-item {
  display: inline-block;
  width: 240rpx;
  height: 360rpx;
  margin-right: 20rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.1);
}

.background-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.background-item.selected {
  border: 4rpx solid #D4001A;
}

.background-name {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 16rpx;
  background: rgba(0,0,0,0.6);
  color: white;
  font-size: 24rpx;
  text-align: center;
}

.generate-btn {
  margin-top: 60rpx;
  background: #D4001A;
  color: white;
  border-radius: 12rpx;
  font-size: 32rpx;
  padding: 24rpx 0;
}
