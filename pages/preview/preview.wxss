/* ÂàÜ‰∫´ÊåâÈíÆ */
.share-buttons {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 24rpx;
  padding: 0 40rpx;
  z-index: 100;
}

.share-button {
  width: 60% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  border: none;
  padding: 0 !important;
  margin: 0 !important;
  display: flex !important;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  animation: buttonGlow 2s ease-in-out infinite;
  position: relative;
  overflow: hidden;
}

.share-button::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 5px;
  height: 5px;
  background: rgba(255, 255, 255, 0.5);
  opacity: 0;
  border-radius: 100%;
  transform: scale(1, 1) translate(-50%, -50%);
  transform-origin: 50% 50%;
}

.share-button:active::after {
  animation: ripple 0.6s ease-out;
}

@keyframes ripple {
  0% {
    transform: scale(0, 0);
    opacity: 0.5;
  }
  100% {
    transform: scale(20, 20);
    opacity: 0;
  }
}

.preview-container {
  position: relative;
  min-height: 100vh;
  background: linear-gradient(180deg, #FF5A5A 0%, #FF3B3B 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
