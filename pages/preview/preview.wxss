.container {
  min-height: 100vh;
  background: #ff2d2d;
  padding: 60rpx 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

/* 背景圆圈装饰 */
.circles {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.circle {
  position: absolute;
  background: rgba(255, 165, 0, 0.2);
  border-radius: 50%;
  animation: float 8s ease-in-out infinite;
  opacity: 0;
}

.circle:nth-child(1) { width: 300rpx; height: 300rpx; left: 10%; top: 10%; animation-delay: 0s; }
.circle:nth-child(2) { width: 200rpx; height: 200rpx; left: 30%; top: 20%; animation-delay: 1s; }
.circle:nth-child(3) { width: 400rpx; height: 400rpx; right: 20%; top: 15%; animation-delay: 2s; }
.circle:nth-child(4) { width: 250rpx; height: 250rpx; right: 10%; top: 40%; animation-delay: 3s; }
.circle:nth-child(5) { width: 350rpx; height: 350rpx; left: 15%; top: 50%; animation-delay: 4s; }

/* 烟花效果 */
.fireworks {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.firework-group {
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  animation: shoot 2s ease-out infinite;
}

.firework-group:nth-child(1) { left: 20%; animation-delay: 0s; }
.firework-group:nth-child(2) { left: 40%; animation-delay: 0.4s; }
.firework-group:nth-child(3) { left: 60%; animation-delay: 0.8s; }
.firework-group:nth-child(4) { left: 80%; animation-delay: 1.2s; }
.firework-group:nth-child(5) { left: 30%; animation-delay: 1.6s; }
.firework-group:nth-child(6) { left: 50%; animation-delay: 2.0s; }
.firework-group:nth-child(7) { left: 70%; animation-delay: 2.4s; }
.firework-group:nth-child(8) { left: 90%; animation-delay: 2.8s; }

.firework-particle {
  position: absolute;
  width: 4rpx;
  height: 4rpx;
  background: #fff;
  border-radius: 50%;
  animation: explode 1s ease-out forwards;
  opacity: 0;
}

/* 设置每个粒子的不同方向 */
.firework-particle:nth-child(1) { transform: rotate(0deg); }
.firework-particle:nth-child(2) { transform: rotate(45deg); }
.firework-particle:nth-child(3) { transform: rotate(90deg); }
.firework-particle:nth-child(4) { transform: rotate(135deg); }
.firework-particle:nth-child(5) { transform: rotate(180deg); }
.firework-particle:nth-child(6) { transform: rotate(225deg); }
.firework-particle:nth-child(7) { transform: rotate(270deg); }
.firework-particle:nth-child(8) { transform: rotate(315deg); }

@keyframes shoot {
  0% {
    transform: translateY(100vh);
    background: #fff;
    opacity: 1;
  }
  50% {
    transform: translateY(30vh);
    background: #fff;
    opacity: 1;
  }
  50.1% {
    opacity: 0;
  }
  100% {
    transform: translateY(30vh);
    opacity: 0;
  }
}

@keyframes explode {
  0% {
    transform: rotate(var(--angle)) translateX(0) scale(1);
    opacity: 0;
  }
  50% {
    opacity: 0;
  }
  50.1% {
    opacity: 1;
  }
  100% {
    transform: rotate(var(--angle)) translateX(100rpx) scale(0);
    opacity: 0;
  }
}

/* 烟花效果 */
.fireworks-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 5;
}

.firework {
  position: absolute;
  width: 6rpx;
  height: 6rpx;
  animation: launch 1s ease-out forwards;
}

.trail {
  position: absolute;
  width: 4rpx;
  height: 20rpx;
  background: linear-gradient(to top, transparent, rgba(255, 220, 100, 0.8));
  animation: trail 1s ease-out forwards;
}

.explosion {
  position: absolute;
  width: 6rpx;
  height: 6rpx;
  opacity: 0;
  transform-origin: center;
  animation: explosion 0.8s ease-out forwards;
  animation-delay: 1s;
}

.spark {
  position: absolute;
  top: 0;
  left: 0;
  width: 100rpx;
  height: 2rpx;
  background: linear-gradient(to right, 
    rgba(255, 220, 100, 0.8) 0%,
    rgba(255, 220, 100, 0.5) 50%,
    transparent 100%
  );
  transform-origin: left center;
  animation: spark 0.8s ease-out forwards;
  animation-delay: 1s;
}

@keyframes launch {
  0% {
    transform: translateY(0) scale(1);
    opacity: 1;
  }
  50% {
    transform: translateY(-50vh) scale(0.8);
    opacity: 0.8;
  }
  100% {
    transform: translateY(-100vh) scale(0.6);
    opacity: 0;
  }
}

@keyframes trail {
  0% {
    height: 20rpx;
    opacity: 1;
  }
  100% {
    height: 0;
    opacity: 0;
  }
}

@keyframes explosion {
  0% {
    transform: scale(0.1);
    opacity: 1;
  }
  50% {
    transform: scale(1);
    opacity: 1;
  }
  100% {
    transform: scale(1.2);
    opacity: 0;
  }
}

@keyframes spark {
  0% {
    transform: rotate(0deg) scale(0);
    opacity: 1;
  }
  50% {
    transform: rotate(180deg) scale(1);
    opacity: 0.8;
  }
  100% {
    transform: rotate(360deg) scale(0);
    opacity: 0;
  }
}

/* 闪烁的星星 */
.stars {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  pointer-events: none;
}

.star {
  position: absolute;
  width: 4rpx;
  height: 4rpx;
  background: #fff;
  border-radius: 50%;
  animation: twinkle 1s infinite;
}

/* 随机分布星星 */
.star:nth-child(1) { left: 10%; top: 15%; animation-delay: 0s; }
.star:nth-child(2) { left: 20%; top: 25%; animation-delay: 0.1s; }
.star:nth-child(3) { left: 30%; top: 10%; animation-delay: 0.2s; }
.star:nth-child(4) { left: 40%; top: 20%; animation-delay: 0.3s; }
.star:nth-child(5) { left: 50%; top: 30%; animation-delay: 0.4s; }
.star:nth-child(6) { left: 60%; top: 15%; animation-delay: 0.5s; }
.star:nth-child(7) { left: 70%; top: 25%; animation-delay: 0.6s; }
.star:nth-child(8) { left: 80%; top: 10%; animation-delay: 0.7s; }
.star:nth-child(9) { left: 90%; top: 20%; animation-delay: 0.8s; }
.star:nth-child(10) { left: 15%; top: 35%; animation-delay: 0.9s; }
.star:nth-child(11) { left: 25%; top: 40%; animation-delay: 1.0s; }
.star:nth-child(12) { left: 35%; top: 45%; animation-delay: 1.1s; }
.star:nth-child(13) { left: 45%; top: 35%; animation-delay: 1.2s; }
.star:nth-child(14) { left: 55%; top: 40%; animation-delay: 1.3s; }
.star:nth-child(15) { left: 65%; top: 45%; animation-delay: 1.4s; }
.star:nth-child(16) { left: 75%; top: 35%; animation-delay: 1.5s; }
.star:nth-child(17) { left: 85%; top: 40%; animation-delay: 1.6s; }
.star:nth-child(18) { left: 95%; top: 45%; animation-delay: 1.7s; }
.star:nth-child(19) { left: 5%; top: 50%; animation-delay: 1.8s; }
.star:nth-child(20) { left: 15%; top: 55%; animation-delay: 1.9s; }

@keyframes twinkle {
  0% {
    opacity: 0.2;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.5);
  }
  100% {
    opacity: 0.2;
    transform: scale(1);
  }
}

@keyframes float {
  0% {
    transform: translateY(0) rotate(0deg);
    opacity: 0;
  }
  20% {
    opacity: 0.3;
  }
  80% {
    opacity: 0.3;
  }
  100% {
    transform: translateY(-200rpx) rotate(360deg);
    opacity: 0;
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(40rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes floating {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
  100% {
    transform: translateY(0);
  }
}

@keyframes shine {
  0% {
    opacity: 0.5;
  }
  50% {
    opacity: 1;
  }
  100% {
    opacity: 0.5;
  }
}

/* 红包动画 */
.red-packet {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(calc(-50% + 5px), calc(-50% + 10px));
  width: 120rpx;
  height: 120rpx;
  z-index: 1000;
  pointer-events: none;
}

.red-packet.show {
  animation: redPacketAnimation 1s ease-out forwards;
}

/* 红包样式 */
.red-envelope {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  height: 800rpx;
  background: linear-gradient(135deg, #ff4d4f 0%, #ff1f1f 100%);
  border-radius: 30rpx;
  box-shadow: 0 20rpx 40rpx rgba(0, 0, 0, 0.2);
  transition: all 0.5s ease;
  z-index: 100;
}

.red-envelope.opened {
  transform: translate(-50%, -150%) scale(0.8);
  opacity: 0;
  pointer-events: none;
}

.envelope-front {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border: 8rpx solid #ffcd32;
  border-radius: 30rpx;
  overflow: hidden;
}

.seal {
  width: 120rpx;
  height: 120rpx;
  background: #ffcd32;
  border-radius: 50%;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.seal-circle {
  width: 80rpx;
  height: 80rpx;
  border: 4rpx solid #ff4d4f;
  border-radius: 50%;
}

.envelope-text {
  font-size: 48rpx;
  color: #ffcd32;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.envelope-flap {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 50%;
  background: #ff6b6b;
  transform-origin: top;
  transition: transform 0.5s ease;
}

.red-envelope.opened .envelope-flap {
  transform: rotateX(180deg);
}

/* 内容动画 */
.content {
  opacity: 0;
  transform: translateY(60rpx);
  transition: all 0.8s ease;
  transition-delay: 0.3s;
}

.content.show {
  opacity: 1;
  transform: translateY(0);
}

/* 金币动画 */
.coins-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 90;
  opacity: 0;
}

.coins-container.show {
  opacity: 1;
}

.coin {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  background: #ffcd32;
  border-radius: 50%;
  animation: coinFall 1s ease-out forwards;
}

@keyframes coinFall {
  0% {
    transform: translate(0, -100%) rotate(0deg);
    opacity: 1;
  }
  100% {
    transform: translate(var(--tx), 100vh) rotate(360deg);
    opacity: 0;
  }
}

/* 分享按钮动画 */
.share-buttons {
  opacity: 0;
  transform: translateY(40rpx);
  transition: all 0.8s ease;
  transition-delay: 0.6s;
}

.share-buttons.show {
  opacity: 1;
  transform: translateY(0);
}

/* 头部样式 */
.header {
  position: absolute;
  top: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  padding: 0 40rpx;
  z-index: 10;
}

.title, .year {
  display: flex;
  flex-direction: column;
  color: #fff;
  font-size: 48rpx;
  font-weight: bold;
  line-height: 1.2;
  font-family: Arial, sans-serif;
}

.title {
  text-align: left;
}

.year {
  text-align: right;
}

.title text, .year text {
  display: block;
  transform-origin: center;
  animation: popIn 0.5s ease-out backwards;
}

.title text:nth-child(n) {
  animation-delay: calc(n * 0.1s);
}

.year text:nth-child(n) {
  animation-delay: calc((n + 14) * 0.1s);
}

@keyframes popIn {
  0% {
    opacity: 0;
    transform: scale(0.5) translateY(-10rpx);
  }
  70% {
    transform: scale(1.2) translateY(5rpx);
  }
  100% {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

/* 添加悬浮效果 */
.title text:hover, .year text:hover {
  animation: wobble 0.5s ease-in-out;
}

@keyframes wobble {
  0%, 100% {
    transform: translateX(0);
  }
  25% {
    transform: translateX(-5rpx) rotate(-5deg);
  }
  75% {
    transform: translateX(5rpx) rotate(5deg);
  }
}

/* 主要内容 */
.content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0 40rpx;
  margin-top: 280rpx;
  width: 100%;
  box-sizing: border-box;
  position: relative;
  z-index: 1;
}

.name {
  font-size: 40rpx;
  color: #fff;
  margin-bottom: 20rpx;
  text-align: center;
  font-weight: normal;
  z-index: 10;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5);
}

.greeting {
  font-size: 72rpx;
  margin: 40rpx 0;
  text-align: center;
  font-weight: bold;
  letter-spacing: 4rpx;
  position: relative;
  z-index: 10;
  background: linear-gradient(to right, #ff4d4f, #ffcd32, #ff4d4f);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  animation: gradientMove 3s linear infinite;
}

.greeting::before {
  display: none;
}

.greeting::after {
  content: '';
  position: absolute;
  top: -15rpx;
  left: -15rpx;
  right: -15rpx;
  bottom: -15rpx;
  background: radial-gradient(circle at center, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
  animation: glowAnimation 2s ease-in-out infinite;
  z-index: -1;
  filter: blur(5rpx);
}

@keyframes glowAnimation {
  0%, 100% {
    opacity: 0.6;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.1);
  }
}

.message {
  font-size: 36rpx;
  color: #fff;
  line-height: 1.6;
  text-align: center;
  padding: 0 40rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: break-all;
  z-index: 10;
  text-shadow: 0 0 10rpx rgba(255, 255, 255, 0.5);
}

/* 底部按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
  margin-top: 40rpx;
  position: relative;
  z-index: 1;
}

.share-btn, .save-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #ff2d2d;
  background: #fff;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 底部装饰 */
.bottom-curve {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 200rpx;
  background: #ff6347;
  border-radius: 50% 50% 0 0;
  z-index: 1;
}

/* 分享按钮 */
.share-buttons {
  position: fixed;
  bottom: 40rpx;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
  gap: 24rpx;
  padding: 0 40rpx;
  z-index: 100;
}

.share-button {
  width: 60% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  border: none;
  padding: 0 !important;
  margin: 0 !important;
  display: flex !important;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10px);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  animation: buttonGlow 2s ease-in-out infinite;
  position: relative;
  overflow: hidden;
}

.share-button::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 5px;
  height: 5px;
  background: rgba(255, 255, 255, 0.5);
  opacity: 0;
  border-radius: 100%;
  transform: scale(1, 1) translate(-50%, -50%);
  transform-origin: 50% 50%;
}

.share-button:active::after {
  animation: ripple 0.6s ease-out;
}

@keyframes ripple {
  0% {
    transform: scale(0, 0);
    opacity: 0.5;
  }
  100% {
    transform: scale(20, 20);
    opacity: 0;
  }
}

.preview-container {
  position: relative;
  min-height: 100vh;
  background: linear-gradient(180deg, #FF5A5A 0%, #FF3B3B 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  overflow: hidden;
}

