  margin-bottom: 40rpx;
  animation: floating 2s ease-in-out infinite;
  text-shadow: 0 0 10rpx rgba(255, 77, 79, 0.3);
}

.message {
  font-size: 42rpx;
  color: #fff;
  line-height: 1.8;
  text-align: center;
  padding: 0 60rpx;
  white-space: pre-wrap;
  word-wrap: break-word;
  word-break: break-all;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
  animation: textAppear 1.5s ease-out forwards;
  opacity: 0;
}

.circles .circle {
  animation: shine 2s ease-in-out infinite;
  animation-delay: calc(var(--i) * 0.2s);
}

.content {
  position: relative;
}

.content::before,
.content::after {
  content: 'üéä';
  position: absolute;
  font-size: 40rpx;
  animation: floating 3s ease-in-out infinite;
}

.content::before {
  left: -40rpx;
  top: 0;
  animation-delay: 0.5s;
}

.content::after {
  right: -40rpx;
  top: 0;
  animation-delay: 1s;
}

