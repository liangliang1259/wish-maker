.preview-container {
  min-height: 100vh;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #f5f5f5;
}

.preview-card {
  width: 100%;
  height: 800rpx;
  background-size: cover;
  background-position: center;
  border-radius: 20rpx;
  position: relative;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 40rpx;
}

.wish-text {
  color: #ffffff;
  font-size: 32rpx;
  line-height: 1.6;
  text-align: center;
  padding: 40rpx;
  background: rgba(0, 0, 0, 0.3);
  border-radius: 16rpx;
  max-width: 80%;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.action-buttons {
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.share-btn, .download-btn {
  flex: 1;
  margin: 0 20rpx;
  height: 88rpx;
  line-height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #ffffff;
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.share-btn {
  background: #07c160;
}

.download-btn {
  background: #1989fa;
}
