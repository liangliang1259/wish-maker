.preview-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #e60012 0%, #8B0000 100%);
  position: relative;
  overflow: hidden;
  display: flex;
  flex-direction: column;
}

.preview-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 40rpx 30rpx;
  box-sizing: border-box;
}

/* 顶部区域 */
.header-section {
  margin-top: 60rpx;
  text-align: center;
  position: relative;
  animation: fadeInDown 0.8s ease-out;
}

.name-container {
  position: relative;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.user-name {
  font-family: "STKaiti", "楷体", serif;
  font-size: 48rpx;
  background: linear-gradient(to right, #FFD700, #FFA500);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.3);
}

.decoration-container {
  position: relative;
  height: 160rpx;
  margin: 40rpx 0;
}

/* 灯笼样式 */
.lantern {
  position: absolute;
  width: 80rpx;
  height: 120rpx;
  animation: swing 3s ease-in-out infinite;
}

.lantern.left {
  left: 15%;
  animation-delay: -1.5s;
}

.lantern.right {
  right: 15%;
  animation-delay: -0.75s;
}

.lantern-top {
  width: 60rpx;
  height: 20rpx;
  background: #FFD700;
  margin: 0 auto;
  border-radius: 10rpx 10rpx 0 0;
}

.lantern-body {
  width: 80rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  border-radius: 10rpx;
  position: relative;
}

.lantern-body::before {
  content: '';
  position: absolute;
  top: 20%;
  left: 10%;
  right: 10%;
  height: 2rpx;
  background: rgba(255,255,255,0.6);
  box-shadow: 0 20rpx 0 rgba(255,255,255,0.6),
              0 40rpx 0 rgba(255,255,255,0.6);
}

.lantern-bottom {
  width: 40rpx;
  height: 20rpx;
  background: #FFD700;
  margin: 0 auto;
  border-radius: 0 0 10rpx 10rpx;
}

/* 云纹样式 */
.cloud-group {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 20rpx;
}

.cloud {
  width: 100rpx;
  height: 40rpx;
  background: rgba(255, 215, 0, 0.3);
  border-radius: 20rpx;
  position: relative;
}

.cloud::before,
.cloud::after {
  content: '';
  position: absolute;
  background: rgba(255, 215, 0, 0.3);
  border-radius: 50%;
}

.cloud::before {
  width: 50rpx;
  height: 50rpx;
  top: -20rpx;
  left: 15rpx;
}

.cloud::after {
  width: 40rpx;
  height: 40rpx;
  top: -15rpx;
  right: 15rpx;
}

/* 中部祝福语区域 */
.wish-section {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 60rpx 0;
  animation: fadeIn 1s ease-out;
}

.wish-container {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  position: relative;
  width: 85%;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.2);
}

.corner {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid #FFD700;
}

.top-left {
  top: 20rpx;
  left: 20rpx;
  border-right: none;
  border-bottom: none;
}

.top-right {
  top: 20rpx;
  right: 20rpx;
  border-left: none;
  border-bottom: none;
}

.bottom-left {
  bottom: 20rpx;
  left: 20rpx;
  border-right: none;
  border-top: none;
}

.bottom-right {
  bottom: 20rpx;
  right: 20rpx;
  border-left: none;
  border-top: none;
}

.wish-text {
  font-family: "STXingkai", "行楷", serif;
  font-size: 36rpx;
  line-height: 1.8;
  color: #333;
  text-align: center;
}

/* 底部装饰区域 */
.footer-section {
  margin-bottom: 60rpx;
  animation: fadeInUp 0.8s ease-out;
}

.decoration-frame {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 40rpx;
  padding: 20rpx;
}

.seal-container {
  width: 200rpx;
  height: 200rpx;
  position: relative;
}

.seal-border {
  width: 100%;
  height: 100%;
  border: 4rpx solid #FFD700;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.1);
  backdrop-filter: blur(5px);
}

.seal-inner {
  width: 85%;
  height: 85%;
  border: 2rpx solid rgba(255, 215, 0, 0.6);
  border-radius: 15rpx;
}

.chinese-char {
  font-family: "STKaiti", "楷体", serif;
  font-size: 60rpx;
  background: linear-gradient(to bottom, #FFD700, #FFA500);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  text-shadow: 2rpx 2rpx 4rpx rgba(0,0,0,0.3);
  animation: bounce 2s ease-in-out infinite;
}

.wave-pattern {
  height: 60rpx;
  margin-top: 30rpx;
  background: repeating-linear-gradient(
    45deg,
    rgba(255, 215, 0, 0.2) 0px,
    rgba(255, 215, 0, 0.2) 10px,
    transparent 10px,
    transparent 20px
  );
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  justify-content: space-between;
  gap: 30rpx;
  padding: 30rpx;
  background: rgba(0,0,0,0.1);
}

.share-btn, .download-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  overflow: hidden;
  border: none;
}

.share-btn {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  box-shadow: 0 4rpx 10rpx rgba(255, 215, 0, 0.3);
}

.download-btn {
  background: linear-gradient(135deg, #1989fa 0%, #0056b3 100%);
  box-shadow: 0 4rpx 10rpx rgba(25, 137, 250, 0.3);
}

/* 红包雨动画 */
.red-packet-rain {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 100;
}

.red-packet {
  position: absolute;
  width: 60rpx;
  height: 80rpx;
  animation: falling 2s linear infinite;
}

.red-packet-design {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #ff4d4f 0%, #ff7875 100%);
  border-radius: 8rpx;
  position: relative;
}

.red-packet-design::before {
  content: '';
  position: absolute;
  top: 10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 30rpx;
  height: 30rpx;
  background: #FFD700;
  border-radius: 50%;
}

/* 动画效果 */
@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes swing {
  0%, 100% {
    transform: rotate(-8deg);
  }
  50% {
    transform: rotate(8deg);
  }
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-15rpx);
  }
}

@keyframes falling {
  from {
    transform: translateY(-100%) rotate(0deg);
  }
  to {
    transform: translateY(100vh) rotate(360deg);
  }
}

/* 适配横屏 */
@media screen and (orientation: landscape) {
  .preview-container {
    max-width: 750rpx;
    margin: 0 auto;
  }
}
