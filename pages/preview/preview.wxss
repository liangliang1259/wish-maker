  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 5px;
  height: 5px;
  background: rgba(255, 255, 255, 0.5);
  opacity: 0;
  border-radius: 100%;
  transform: scale(1, 1) translate(-50%, -50%);
  transform-origin: 50% 50%;
}

.share-button:active::after {
  animation: ripple 0.6s ease-out;
}

@keyframes ripple {
  0% {
    transform: scale(0, 0);
    opacity: 0.5;
  }
  100% {
    transform: scale(20, 20);
    opacity: 0;
  }
}

.preview-container {
  position: relative;
  min-height: 100vh;
  background: linear-gradient(180deg, #FF5A5A 0%, #FF3B3B 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx 0;
  overflow: hidden;
}

/* 福字飘落效果 */
.blessing-chars {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 50;
}

.blessing-char {
  position: absolute;
  color: #ff4d4f;
  font-size: 40rpx;
  opacity: 0.8;
  animation: blessingFall 3s linear infinite;
}

@keyframes blessingFall {
  0% {
    transform: translateY(-100%) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 0.8;
  }
  90% {
    opacity: 0.8;
  }
  100% {
    transform: translateY(100vh) rotate(360deg);
    opacity: 0;
  }
}

/* 闪光效果 */
.flash-light {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0) 70%);
  opacity: 0;
  pointer-events: none;
  z-index: 60;
  animation: flash 4s ease-out infinite;
}

@keyframes flash {
  0%, 100% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
}

/* 红包雨效果 */
.red-packets {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 50;
}

.red-packet {
  position: absolute;
  font-size: 40rpx;
  opacity: 0;
  animation: packetFall 2s linear infinite;
}

@keyframes packetFall {
  0% {
    transform: translateY(-100%) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  90% {
    opacity: 1;
  }
  100% {
    transform: translateY(100vh) rotate(360deg);
    opacity: 0;
  }
}

/* 按钮动画 */
@keyframes buttonGlow {
  0%, 100% {
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  }
  50% {
    box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.3);
  }
}

/* 文字动画 */
@keyframes textAppear {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}
