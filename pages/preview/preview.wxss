}

/* Á¶èÂ≠óÈ£òËêΩÊïàÊûú */
.blessing-chars {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 50;
}

.blessing-char {
  position: absolute;
  color: #ff4d4f;
  font-size: 40rpx;
  opacity: 0.8;
  animation: blessingFall 3s linear infinite;
}

@keyframes blessingFall {
  0% {
    transform: translateY(-100%) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 0.8;
  }
  90% {
    opacity: 0.8;
  }
  100% {
    transform: translateY(100vh) rotate(360deg);
    opacity: 0;
  }
}

/* Èó™ÂÖâÊïàÊûú */
.flash-light {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle, rgba(255,255,255,0.2) 0%, rgba(255,255,255,0) 70%);
  opacity: 0;
  pointer-events: none;
  z-index: 60;
  animation: flash 4s ease-out infinite;
}

@keyframes flash {
  0%, 100% {
    opacity: 0;
  }
  50% {
    opacity: 1;
  }
}

/* Á∫¢ÂåÖÈõ®ÊïàÊûú */
.red-packets {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  z-index: 50;
}

.red-packet {
  position: absolute;
  font-size: 40rpx;
  opacity: 0;
  animation: packetFall 2s linear infinite;
}

@keyframes packetFall {
  0% {
    transform: translateY(-100%) rotate(0deg);
    opacity: 0;
  }
  10% {
    opacity: 1;
  }
  90% {
    opacity: 1;
  }
  100% {
    transform: translateY(100vh) rotate(360deg);
    opacity: 0;
  }
}

/* ÊåâÈíÆÂä®Áîª */
@keyframes buttonGlow {
  0%, 100% {
    box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  }
  50% {
    box-shadow: 0 4rpx 20rpx rgba(255, 255, 255, 0.3);
  }
}

/* ÊñáÂ≠óÂä®Áîª */
@keyframes textAppear {
  0% {
    opacity: 0;
    transform: translateY(20rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}
